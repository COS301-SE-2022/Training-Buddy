generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model activityStatistic {
  activity                     String  @db.VarChar(50)
  timeSpent                    Decimal @default(0) @db.Decimal(10, 0)
  insight                      String? @db.VarChar(125)
  XP                           String  @db.VarChar(50)
  email                        String  @db.VarChar(50)
  user_activityStatisticTouser user    @relation(fields: [email], references: [email], onDelete: Cascade, map: "activityStatisticForeignKeyUser")

  @@id([activity, email], map: "activityStatisticPrimaryKey")
}

model user {
  email             String              @id(map: "userPrimaryKey") @unique @db.VarChar(25)
  gender            String              @db.VarChar(20)
  location          String              @db.VarChar(100)
  password          String              @db.Text
  cellNumber        String             @db.VarChar(100)
  userName          String              @db.VarChar(50)
  userSurname       String              @db.VarChar(50)
  dob               String              @db.VarChar
  activityStatistic activityStatistic[]
}
